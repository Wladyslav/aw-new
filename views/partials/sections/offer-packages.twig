                    {% if package.best_offer %}<div class="single-package-best">Najczęściej wybierany</div>{% endif %}
                    <div class="package-top">Pakiet</div>
                    <div class="package-name">{{package.name}}</div>
                    <div>od</div>
                    <div class="package-price">{{package.price}}</div>
                    <p class="package-short-desc">{{package.short_desc}}</p>
                    <button class="btn btn-red popup-open">Poproś o wycenę</button>
                </div>
                {% endfor %}
           

