
  <section class="home_banner">
    <div class="container position-relative">
        {% if not function('is_front_page') %}
            <div class="page-breadcrumbs">{{ function('yoast_breadcrumb') }}</div>
        {% endif %}
        <div class="row">
            <div class="col-12 col-md-6">
                <h1 class="off-loop">
                    <div class="heading">{{  section.h_title }}</div>
                    <svg xmlns="http://www.w3.org/2000/svg" width="533" height="23" viewBox="0 0 533 23" fill="none">
                        <path d="M3 7.56831C194 0.0682354 394 3.06824 527.778 7.56831C536.393 7.56831 510.615 9.32312 502 9.4572C384.431 11.2871 264.363 9.46644 147.028 14.2072C144.681 14.3021 142.166 14.0545 139.833 14.3461C137.567 14.6294 144.383 14.8087 146.667 14.8461C212.941 15.9326 279.232 16.6703 345.5 18.0684C362.066 18.4179 378.523 19.9936 395.083 20.3184" stroke="#F63D37" stroke-width="5" stroke-linecap="round" />
                    </svg>
                </h1>
                <h4 class="hero-short-desc">{{ section.h_short_desc }}</h4>
                <h4>{{ section.h_description }}</h4>
                {% if not section.img_to_form %}
                <button  class="btn btn-red popup-open">Skontaktuj się z nami</button>
                {% endif %}     
            </div>
            <div class="d-flex col-12 col-md-6">
                {% if section.img_to_form %}
                <div class="hero-form-wrapper">
                    <h3>Wypełnij formularz i otrzymaj wycenę</h3>
                {{ do_shortcode('[hubspot type="form" portal="139608152" id="bc235f50-5174-433a-9be9-aa2f9969ead7"]') }}
                </div>
                {% else %}
                <img src="{{ section.h_obraz.url}}"class="img-fluid my-md-auto" alt="" />
                {% endif %}          
            </div>
        </div>
    </div>
</section>
{% if not section.img_to_form %}
<div class="contact-form-popup">
    <div class="container contact-form-popup-wrapper">
        <span class="close-button">&times;</span>
    {% if section.h_form %}{{ do_shortcode(section.h_form) }} {% else %} {{ do_shortcode('[hubspot type="form" portal="139608152" id="e44224d7-59e4-42b3-bb57-86b0d07b0f61"]') }}  {% endif %}
    </div>  
</div>
{% endif %}
